extends ../layout

block content
    div.container
        div.row
            if message
                h1.text-center.error-message #{message}

            h1 Add money
                div.account-wall
                    form(class='form-take', action='/billing/#{bill.id}', method='POST')
                        input(type='text', name='credit'  class='form-control', value='0',required, autofocus)
                        span
                            = bill.Currency.code
                        button(class='btn btn-lg btn-primary btn-block', type='submit') Send


            h1 Take money
                div.account-wall
                    form(class='form-take', action='/billing/#{bill.id}', method='POST')
                        input(type='text', name='debit'  class='form-control', value='0',required, autofocus)
                        span
                            = bill.Currency.code
                        button(class='btn btn-lg btn-primary btn-block', type='submit') Send

            a(href='/billing/#{bill.id}/transfer', class='text-center') Transfer
            br
            a(href='/', class='text-center') Cancel

